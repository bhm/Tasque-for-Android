<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/activity_importer_progress_bar"
        style="@style/ProgressBarTasque"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/activity_tutorial_chooser"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="8"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/activity_importer_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_horizontal_margin"
            android:paddingRight="@dimen/padding_horizontal_margin"
            android:text="@string/activity_chooser_hint"
            android:textSize="@dimen/font_large" />

        <ListView
            android:id="@+id/activity_importer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/importer_start_fresh_here"
        style="@style/ButtonTasque"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/activity_chooser_start_fresh"
        android:textColor="@color/abs__background_holo_light"
        android:textSize="@dimen/font_medium" />

    <TextView
        android:id="@+id/importer_rtm"
        style="@style/ButtonTasque"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/activity_chooser_use_remember_the_milk"
        android:textColor="@color/abs__background_holo_light"
        android:textSize="@dimen/font_medium" />

    <TextView
        android:id="@+id/importer_synchronize_with_other"
        style="@style/ButtonTasque"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/activity_chooser_synchronize"
        android:textColor="@color/abs__background_holo_light"
        android:textSize="@dimen/font_medium" />

</LinearLayout>