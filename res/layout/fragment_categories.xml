<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abs__background_holo_light"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fragment_categories_list_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_vertical_margin"
        android:text="@string/fragment_categories_list_hint"
        android:textSize="@dimen/font_very_small"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/fragment_categories_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>