<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/synchronize_step_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible" >

    <TextView
        android:id="@+id/synchronize_step_two_hint"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:gravity="center"
        android:padding="@dimen/padding_horizontal_margin"
        android:text="@string/tutorial_step_two_hint"
        android:textSize="@dimen/font_medium" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tabs_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="16" >
    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/tab_fragment_pager_indicators"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal" >
    </RadioGroup>

</LinearLayout>