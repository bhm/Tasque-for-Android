<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bustiblelemons.tasque"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bustiblelemons.tasque.Splash"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bustiblelemons.tasque.ImporterActivity"
            android:label="@string/title_activity_importer"
            android:theme="@style/Theme.Tasquelight" >
        </activity>
        <activity
            android:name="com.bustiblelemons.tasque.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Tasquedark" >
        </activity>
        <activity
            android:name="com.bustiblelemons.tasque.Tasque"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:theme="@style/Theme.Tasque" >
        </activity>
    </application>

</manifest>